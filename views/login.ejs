<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta   
 name="viewport" content="width=device-width, initial-scale=1">   

    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/logo-dikti.png">   
 
    <title>E-Feeder</title>
    <link href="/css/pages/login-register-lock.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <section id="wrapper" class="login-register login-sidebar" style="background-image:url(/images/background/login_back.jpg);">   

        <div class="login-box card">
            <div class="card-body">
                <form class="form-horizontal form-material" id="loginform" action="/login" method="POST">   
 
                    <div class="text-center">
                        <a href="javascript:void(0)" class="text-center db">
                            <img src="/images/logo-dikti.png" alt="Home" width="60px" /><br/>
                            <img src="/images/e-feeder-text.png" alt="Home" /><br>
                        </a>
                        <span style="font-size:12px;color:#0070bb;font-weight:bold">Universitas Tujuh Belas Agustus</span>
                    </div>
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-primary m-t-20">
                            <%= error %>
                        </div>
                    <% } %>
                    <br>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <select class="form-control" name="semester">
                                <option value="">Pilih Semester</option>
                                <option value="1">Gasal</option>
                                <option value="2">Genap</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <select class="form-control" name="tahun">
                                <option value="">Pilih Tahun</option>
                                <option value="2024">2024</option>
                                <option value="2025">2025</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group m-t-30">
                        <div class="col-xs-12">
                            <input class="form-control" name="username" type="text" required="" placeholder="Username">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" name="password" type="password" required="" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group   
 text-center m-t-20">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-info btn-lg btn-block text-uppercase   
 btn-rounded" type="submit">Log In</button>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">   

                            Copyright © 2024 Universitas Tujuh Belas Agustus. <br>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <div class="preloader">
        <div class="loader">
            <div class="loader__figure"></div>
            <p class="loader__label">e-Feeder</p>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>   

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $(function() {
            $(".preloader").fadeOut();
        });
        $(function() {
            $('[data-toggle="tooltip"]').tooltip()
        });
        $('#to-recover').on("click", function() {
            $("#loginform").slideUp();
            $("#recoverform").fadeIn();
        });
    </script>
</body>
</html>